<ul class="list" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="list__item{% if post.url == url %} list__item--active{% endif %}">
    <a href="{{ post.url | url }}" class="list__link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="list__date" datetime="{{ post.date | htmlDateString }}">({{ post.date | readableDate }})</time>
    <div>
      {% for tag in post.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag"><span class="visually-hidden">Tagged as</span>{{ tag }}</a>
        {%- endif -%}
      {% endfor %}
    </div>
  </li>
{% endfor %}
</ul>
